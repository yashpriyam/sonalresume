<%= simple_form_for([@play, @play.reviews.build]) do |f| %>
  <div id="rating-form">
    <label> Rating </label>
  </div>
  <%= f.input :comment %>
  <%= f.button :submit, "Post", :class => "btn-custom2" %>
  <%= link_to "Back", play_path(@play), class: "btn btn-info" %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
