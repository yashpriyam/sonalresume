<h1 class="current_category"><%= params[:category] %></h1>

<% if @plays.count == 0 %>
  <h3>There are no plays in this category!</h3>
<% else %>
  <div class="row">
    <% @plays.each do |play| %>
      <div class="col-md-3">
        <div class="panel panel-default">
          <a href="/plays/ <%= play.id %>">
            <%= image_tag play.play_img.url(:play_index), class: "play" %>
            <h2><%= link_to play.title, play_path(play) %></h2>
          </a>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
